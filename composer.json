{
    "name": "ork/base",
    "type": "library",
    "description": "A PHP utility library used by Ork packages.",
    "homepage": "http://github.com/AlexHowansky/ork-base",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "ork/phpcs": "dev-master",
        "phpunit/phpunit": ">=4.0",
        "mikey179/vfsStream": ">=1.2"
    },
    "autoload": {
        "psr-4": {
            "Ork\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ork\\Tests\\": "tests/"
        }
    }
}
